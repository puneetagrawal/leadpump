
<div class="container">
	<div class="row-fluid">
		<div class="span12">
			<div class="signinCon">
				<div class="row-fluid">
					<span class="span12">
						<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  
						<div class="errors">
							<%= devise_error_messages! %>
						</div>
						<h2>Forgot your password?</h2>
						<p>
							<%= f.label :email %>
  							<%= f.email_field :email, :autofocus => true %>
						</p>

						<p>
							<%= f.submit "Send me reset password instructions" , :class => "btn green mr20"%>
						</p>

						<% end %>
					</span>
				</div>

			</div>
		</div>
	</div>
</div>

