
<div class="container">
	<div class="row-fluid">
		<div class="span12">
			<div class="signinCon">
				<div class="row-fluid">
					<span class="span12">
						<%= form_for resource, :as => resource_name, :url => session_path(resource_name),:html => {:class => "form", } do |f| %>
						<div class="errors">
							<% @user.errors.each do |attr, msg| %>
							<p> <%= "#{attr} #{msg}"%> </p>
							<% end %>
						</div>
						<h2>Login</h2>
						<p>
							<%= f.label :email %><br />
							<%= f.email_field :email, :autofocus => true %>
						</p>
						<p>
							<%= f.label :password %><br />
							<%= f.password_field :password %>
						</p>

						<% if devise_mapping.rememberable? -%>
							<p style="float:left"><%= f.check_box :remember_me, :class=>"signin_checkbox" %> 
								<%= f.label :remember_me, :class=>"signin_label" %>
							</p>
						<% end %>
						
							<p>
								<%= f.submit "Sign in" , :class => "btn green mr20"%>
								<%= link_to "Sign up", new_plan_path(:maxUsers => 1), :class => "btn red" %>
							</p>
							
						
						<p>
							<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
								  <%= link_to "Forgot your password?", new_password_path(resource_name), :class=>"black_link" %><br />
							<% end -%>						
						</p>
						<% end %>
					</span>
				</div>

			</div>
		</div>
	</div>
</div>