
<div class="container">
	<div class="row-fluid">
		<div class="span12">
			<div class="signinCon">
				<div class="row-fluid">
					<span class="span12">
						<%= form_for resource, :as => resource_name, :url => session_path(resource_name),:html => {:class => "form", } do |f| %>
						<div class="errors">
							<% @user.errors.each do |attr, msg| %>
							<p> <%= "#{attr} #{msg}"%> </p>
							<% end %>
						</div>
						<h2>Login</h2>
						<p><%= f.label :email %><br />
							<%= f.email_field :email, :autofocus => true %></p>

							<p><%= f.label :password %><br />
								<%= f.password_field :password %></p>

								<% if devise_mapping.rememberable? -%>
								<p style="float:left"><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
								<% end %>
								<p style="float:left"><%= f.submit "Sign in" , :class => "btn green"%></p><br/><br/>
								<% end %>
								<p >
									<%= render "devise/shared/links" %>
								</p>
							</span>
						</div>

					</div>
				</div>
			</div>
		</div>