
<div class="container wrapper" >

<div class="pre_formated_email social-fb">
    
    <%# if @companies.present? %>
        <%#=select_tag "company_admins", options_from_collection_for_select(@companies, "id", "name"),:prompt => "Select Company",:style=>"width:200px;margin:-10px 0 32px 10px;" %>
    <%#end%>

    <div class="span4">
        <h3>Share this invitations on Facebook with one simple click</h3>
        <p class="text-center"><img src="/assets/facebook-icon.png"></p>
    </div>
    <div class="span7">
        <p>Enter facebook message that you want to send on facebook.</p>
        <form class="form">
          <%=text_field_tag :fbsubject, current_user.fetchfbsubject, :placeholder=>"Enter Subject Line Here.", :class=>"fb_social_height" %>
            <textarea class="ckeditor">
                <%=current_user.fetchFacebookMessage%>
            </textarea>
            <br/>
            <span class="submitFmes">
                <a class="btn yellow" href="javascript:void(0)">Submit</a>
            </span>
        </form>
    </div>
</div>

<div class="pre_formated_email social-twit">
    <div class="span4">
        <h3>Share this invitations on twitter with one simple click</h3>
        <p class="text-center"><img src="/assets/twitter-icon.png"></p>
    </div>
    <div class="span7">
        <p>Enter Tweets message that you want to tweet on twitter.</p>
        <form class="form">
            <!-- <input type="hidden" name="hidden_snippet" id="hidden_snippet" value="" /> -->
            <textarea class="ckeditor" id="twitter">
                <%=current_user.fetchtwitterMessage%>
            </textarea>
               <br/>
            <span class="submitTmes">
                <a class="btn yellow" href="javascript:void(0)">Submit</a>
            </span>
        </form>
    </div>
</div>

<div class="pre_formated_email">
    <div class="span4">
        <h3>Share this invitations on Gmail or Yahoo with one simple click</h3>
        <p class="text-center"><img src="/assets/mail-icon.png" /></p>
    </div>
    <div class="span7">
        <p>Enter Email message that you want to send on Gmail or Yahoo.</p>
        <form class="form">
            <%=text_field_tag :emailsubject, current_user.fetchgmailsubject, :placeholder=>"Enter Subject Line Here.", :class=>"fb_social_height"%>
            <textarea class="ckeditor">
                <%=current_user.fetchEmailMessage%>
            </textarea>
               <br/>
            <span class="submitGmes">
                <a class="btn yellow" href="javascript:void(0)">Submit</a>
            </span>
        </form>
    </div>
</div>

</div>
