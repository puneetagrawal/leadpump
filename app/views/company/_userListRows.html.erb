<td class="leadAction">
	<%if user.picture.present?%>
        <%= image_tag user.picture.avatar.url(:thumb), :class=>"img-polaroid", :style=>"width:100%;height:suto;" %>
    <%else%>
        <div class="pull-left clear mt10 leadAction">
        <a class="btn yellow submitlogo leadAction" style="font-size: 10px;min-width: 42px;padding: 2px 20px;">Upload Pic</a>
        <%= form_for @picture, :url => '/createpic' ,:html => { :id => "c_logo" } do |form| %>
          <%= hidden_field_tag :u_id, user.id%>
          <%= form.file_field :avatar, :style =>"display:none" %>
        <% end %>
    </div>
    <%end%>
</td>
<td><%=user.name%></td>
<td><%=user.email%></td>
<td class="leadActive leadAction" id="status_<%=user.id%>">
	<%=render "common_templates/changeStatus", :user=>user, :lead=>nil%>
</td>
<td class="leadAction">
	<%=link_to "Edit", "javascript:void(0)", html={:class=>"leadAction userEdit"}%>
	 | <%=link_to "Delete", "javascript:void(0)", html={:class=>"leadAction leadDelete"}%> 
</td>    
