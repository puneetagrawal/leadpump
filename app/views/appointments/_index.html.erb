 <table class="table table-striped">  
  <thead>
    <tr>
      <th class="app_index">Time</th>
      <th class="app_index"> Date(m/d/y) </th>
      <th class="app_index"> Submitted By </th>
      <th class="app_index"> Lead Name </th>
      <th class="app_index">Schedule </th>
    </tr>
  </thead>
  <tbody>
    <% if @appointments.present? %>
      <% @appointments.each do |a| %>
        <tr id="viewLead_<%=a.lead_id%>" class="viewLead listView" data-action="leadpopup">
          <% if a.app_date_time.present? && a.app_date.present?%>
            <td class="time"><%= a.app_date_time.strftime("%I:%M %p") %></td>
            <td class="green_dark"> <%= a.app_date.strftime("%m/%d/%Y") %>  </td>
            <td class="blue_dark"> <%= a.user.name.humanize if a.user.present? %>  </td>
            <td class="green_dark"> <%= a.lead.name %> </td>
            <td class="blue_dark"> <%= a.task %> </td>
          <%end%>
        </tr>
      <%end%>
    <%elsif @appointments.blank?%>
      <tr><td colspan="5"> No record found.</td></tr>
    <%end%>
  </tbody>
</table>

<%=render "common_templates/popupContainer"%>


