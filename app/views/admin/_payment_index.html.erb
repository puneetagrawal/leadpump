<table class="table table-striped" id="filter_user">
  <thead>
    <tr>
      <td>Date</td>
      <td>User</td>
      <td>Invoice Id</td>
      <td>Subscription Id</td>
      <td>Amount ($)</td>
    </tr>
  </thead>
  <tbody>
    <% if @users.present? %>
      <% if @filter_payments.nil? %>
        <% @users.each do |user| %>
          <% if user.subscription.present? %>
            <tr>
              <td><%= user.subscription.created_at.strftime("%Y/%m/%d") %></td> 
              <td><%= user.name.humanize %></td>
              <td><%= user.subscription.charge_id %> </td>
              <td><%=user.subscription.customer_id %> </td>
              <td><%= user.subscription.payment %> </td>
            </tr>
          <% end %>
        <% end %>
      <% else %>
        <% @filter_payments.each do |user_payment| %>
          <% if user_payment.subscription.present? %>
            <tr>
              <td><%= user_payment.subscription.created_at.strftime("%Y/%m/%d") %></td> 
              <td><%= user_payment.name.humanize %></td>
              <td><%= user_payment.subscription.charge_id %> </td>
              <td><%=user_payment.subscription.customer_id %> </td>
              <td><%= user_payment.subscription.payment %> </td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4"> No record found. </td>
      </tr>
    <% end %>
  </tbody>
</table>