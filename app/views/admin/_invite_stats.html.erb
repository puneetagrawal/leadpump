<div class="modal-header">
    <button type="button" class="close cancelFancybox" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h2 class="heading" style="border-radius:5px;">Invite Status</h2>
</div>
<div class="modal-body" style="height:130px;">
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Source</td>
                <td>Location</td>
                <td>Sent</td>
                <td>Opened</td>
                <td>Views</td>
                <td>Converted</td>
            </tr>
        </thead>
        <tbody>
            <% if @stat.present? %>
                <tr>
                    <td><%= @stat.source %></td>
                    <td><%= @stat.location %></td>
                    <td><%= @stat.e_sents.present? ? @stat.e_sents : 0 %></td>
                    <td><%= @stat.e_oppened.present? ? @stat.e_oppened : 0 %></td>
                    <td><%= @stat.e_views.present? ? @stat.e_views : 0 %></td>
                    <td><%= @stat.e_converted.present? ? @stat.e_converted : 0 %></td>
                </tr>
            <% else %>
                <tr>
                    <td colspan="6"> No record found. </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
