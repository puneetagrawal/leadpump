<div class="span4">

    <%= form_for @lead, :html => {:class => "forms"} do |lead| %>
    <%=render "common_templates/showerrors", :object=>@lead%>

    <div class="border app_header">
        <h2 class="heading headmsg">Add A New Lead</h2>
        <div class="form pd15 leadform">
            <%= lead.hidden_field :id%>
            <p><%= lead.label "First Name:" %><%= lead.text_field :name %></p>
             <p><%= lead.label "Last Name:" %><%= lead.text_field :lname %></p>
            <p><%= lead.label "Phone:" %><%= lead.text_field :phone %></p>
            <p><%= lead.label "Email:" %><%= lead.text_field :email %></p>
            <p><%= lead.label "Address:" %><%= lead.text_field :address %></p>
            <p><%= lead.label "Refferred By:" %><%= lead.text_field :refferred_by %></p>
            <p><%= lead.label "Lead Source:" %><%= lead.select :lead_source, [['Direct Mailer', "Direct Mailer"], ['Lead Box ', "Lead Box"], ['LeadPump - Traditional', "LeadPump - Traditional"], ['LeadPump - Opt in', "LeadPump - Opt in"], ['Member Referral', "Member Referral"], ['Radio ad', "Radio ad"], ['Telephone inquiry', "Telephone inquiry"], ['Website', "Website"], ['Walk in', "Walk in"]] %></p>
            <p><%= lead.label "Goals:" %><%= lead.select :goal, [['Build muscle', "Build muscle"], ['Build strength', "Build strength"], ['Doctor recommended', "Doctor recommended"], ['Firm up', "Firm up"], ['Lose weight', "Lose weight"], ['Overall health', "Overall health"], ['Rehabilitation', "Rehabilitation"]] %></p>
            <p><%= lead.label "Guest Pass Issued:" %><%= lead.select :guest_pass_issued, [['Yes', true], ['No', false]] %></p>
            <p><%= lead.label "Dues Value:" %><%= lead.text_field :dues_value %></p>
            <p><%= lead.label "Enrolment Value:" %><%= lead.text_field :enrolment_value %></p>
            <p><%= lead.label "Notes:" %><%= lead.text_field :notes %></p>
            <p class="submitLeadBtn">
                <% if current_user.checkLeadLimit %>
                    <input type="submit" class="btn yellow" value="Enter Lead"/>
                <%else%>
                    <input type="button" class="btn yellow disabled" value="Enter Lead"/>
                <%end%>
            </p>    
            <div class="clear"></div>
        </div>        
    </div>    
    <%end%>    
</div>