<div class="span4 margin_width">    
    <div class="taskAsgn">
        <h2 class="heading" style="border-radius:5px;">Create Task</h2>
	        <%=hidden_field_tag :leadid, @lead.id%>
	        <%=select_tag "createLeadTask", options_for_select(@tasklist, @task),:prompt => "Create Task",:class=>"createLeadTask taskAssign" %>

	        <p> <label>Appt. time: </label>
                <%=select_tag "hr", options_for_select(1..12, @hour),:prompt => "hours",:class=>"w10" %>
                <%=select_tag "min", options_for_select(1..60, @min),:prompt => "min",:class=>"w10" %>
                <%=select_tag "zon", options_for_select(["am","pm"], @zone),:class=>"w10" %>
            </p>
            <p> <label>Date of Appt: </label>
                <%= text_field_tag :app_date, @date %>
            </p>
            <%if @home%>
                <p> <label>Mark Complete: </label>
                    <%= check_box_tag :complete %>
                </p>
            <%end%>
            <p class="taskBtn"> 
                <input type="button" name="submitApoint" value="submit" id="submitApoint" style="margin:-10px 0 0 !important;width:30%;background:none repeat scroll 0 0 #FFDE52;padding:7px">
            </p>
    </div>        
</div>

<script type="text/javascript">
	$('#app_date').datepicker({ dateFormat: 'yy-mm-dd', minDate: 0 }).val();
	tasksave();
</script>