<div class="span4 margin_width">    
    <div class="taskAsgn">
        <h2 class="heading" style="border-radius:5px;">Create Task</h2>
	        <%=hidden_field_tag :leadid, @task_hash[:lead].id%>
	        <%=select_tag "createLeadTask", options_for_select(@task_hash[:tasklist], @task_hash[:task]),:prompt => "Create Task",:class=>"createLeadTask taskAssign" %>

	        <p> <label>Appt. time: </label>
                <%=select_tag "hr", options_for_select(1..12, @task_hash[:hour]),:prompt => "hours",:class=>"w10" %>
                <%=select_tag "min", options_for_select(["00", "15", "30", "45"], @task_hash[:min]),:prompt => "min",:class=>"w10" %>
                <%=select_tag "zon", options_for_select(["am","pm"], @task_hash[:zone]),:class=>"w10" %>
            </p>
            <p> <label>Date of Appt: </label>
                <%= text_field_tag :app_date, @task_hash[:date] %>
            </p>
            
            <p class="taskBtn"> 
                <input type="button" name="submitApoint" value="submit" id="submitApoint" style="margin:-10px 0 0 !important;width:30%;background:none repeat scroll 0 0 #ffffff;padding:7px">
            </p>
    </div>        
</div>

<script type="text/javascript">
	$('#app_date').datepicker({ dateFormat: 'yy-mm-dd', minDate: 0 }).val();
	tasksave();
</script>