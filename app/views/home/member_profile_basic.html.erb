<div class="container" style="padding-top:40px;">
	<div class="row-fluid">
		<div class="span12">
			<h2 class="heading-about" style="text-align: center;">Member Profile</h2>
		</div>

		<div class="row-fluid">
			<div class="step_main_col_new">

					<div class="step_main_col step_new">
      	<div class="step_wise_col step_1">
          	<span class="step_circle step_active"><span >1</span></span>
              <div class="step_txt">
         			<h3>STEP 1</h3>
              </div>
          </div>
          
          <div class="step_wise_col step_2">
          	<span class="step_circle"><span>2</span></span>
         		<div class="step_txt">
         		<h3>STEP 2</h3>
              </div>
          </div>
          
          <div class="step_wise_col step_3">
          	<span class="step_circle"><span>3</span></span>
         		<div class="step_txt">
         		<h3>STEP 3</h3>
              </div>
          </div>
      </div>
      <div class="clear"></div>
				<%= form_for :lead, :url => member_profile_advance_path, :html => { :style => 'margin-left:35px;'} do |f| %>
					<%= f.text_field :address, :placeholder => "Address" %>
					<%= f.text_field :city, :placeholder => "City"  %>
					<%= f.text_field :zip, :placeholder => "Zip Code"  %>
					<%= f.text_field :phone, :placeholder => "Phone", class: "phone_text"  %>
					<%# f.text_field_tag :gender, :placeholder => "Male/Female"  %>
					<%= text_field_tag "gender", nil, :placeholder => "Male/Female"  %>
					<%= f.text_field :age, :placeholder => "Age"  %>
					<%= f.hidden_field :lead_id, :value => @lead.id %>
				 <div class="clear"></div>	
				<div style="text-align:center">	<%= f.submit "Step Three", :class => "btn yellow step_su_btn" %></div>
				<% end %>
			</div>
		</div>
	</div>
</div>

<script>
	$(".step_1").addClass('step_line');
	$(".step_1 .step_circle").addClass('step_active').addClass('step_passed');
	$(".step_2 .step_circle").addClass('step_active');
</script>
