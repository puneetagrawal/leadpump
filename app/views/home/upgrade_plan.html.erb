<div class="container">
	<div class="row-fluid">
		<div class="span12 signup_heading">
			<h4>Upgrade your account.</h4>
			<div class="signupCon pr">
				<%= form_tag("/make_payment", method: "post",:class => "form form_block",:id=>"new_user" ) do %>
					<div class="row-fluid">
						<div class="icon-largest badge">
							<span>Thank <br> you!</span>
						</div>
						<span class="span7">
							<div class="errors" id="stripe_error" style="color:#8A2A1C;">
								<%if @cardError.present?%>
								<%=@cardError%>
								<%end%>
							</div>
							<h2><span class="number">1</span>Your details</h2>
							<%=render "common_templates/select_users"%>
							<div class="clear"></div>				
							<h2><span class="number">2</span>Your billing information</h2>
							<%= render :template => "common_templates/_labelsForDiscounts" , :locals => { :f => ''}%>
							<input type="hidden" id="user_subscription_attributes_stripe_card_token" value="abn">
							<%= render :template => "devise/registrations/_creditCardDetails"%>	
								<span style="display:none" id="couponDiv">
									<p><label for="couponCode">Coupon Code</label><input type="text" id="couponCode"></p>	
								</span>
								<div class="clear"></div>
							</span>
							<span class="span4 signupRight">
								<h2>Payment Detail</h2>
								<div class="testimonial">
									<p>"Leads are up sales are up, I say two thumbs us to LEADPUMP.com."</p>
								</div>
								<div class="testimonial">
									<p>Plan Type: 
										<strong>Advanced</strong></p>
										<p>Total Amount as per user: </p><p><strong><span id="pu"></span></strong></p><p></p>
										<p>Total Discount: <strong><span id="td">No Discount</span></strong></p>
										<p>Total Charges: <strong><span class="payAmountTxt"></span></strong></p>

									</div>
									<div class="absblock" id="user_counter">
										<h3>You are in good company</h3>
										<p>
											<span>1,276 Users</span>
											Are already enrolled for <b class="txt_black">LEAD</b><i class="txt_red">PUMP</i>
										</p>
									</div>
									<div id="payment_logos" class="absblock">

										<img src="/assets/payment_logos.png" alt="Payment_logos">
									</div>
								</span>
							</div>
							<div class="row-fluid">
								<div></div>
								<div class="span3 w19">
									<div class="priceDetail">
										<strong class="tAmount"></strong>
										<p><span class="payAmountTxt"></span></p>
									</div>
								</div>
							</div>
							<div class="row-fluid">
								<div class="span12 acceptTerms">
									<label class="pull-left"><input type="checkbox" name="acceptConditions">I have read and accept the <a class="link" href="/home/terms">Terms and Conditions</a> </label>
									<span class="submitSignUpForm">
										<a id="signupBtn" href="javascript:void(0)" class="btn green pull-right">Create My Account</a>
									</span>
								</div>
							</div>
						<%end%>					
					</div>
				</div>
			</div>
		</div>