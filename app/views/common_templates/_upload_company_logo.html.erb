<div class="row-fluid">
    <div class="row-fluid">
        <%if current_user.picture.present?%>
            <%= image_tag current_user.picture.company_logo.url(:medium), :class=>"img-polaroid img250"%>
        <%else%>
            <img src="/assets/company-logo.png" class="img-polaroid img250">
        <%end%>
	</div>
     <div class="row-fluid">
	    <div class="span12">
	        <%if current_user.isCompany%>
	            <div class="pull-left clear mt10 padtp10">
	                <a class="btn blue up_comp_logo">Upload Company Logo</a>
	                <span><a class="btn blue skip_profile" data-id="profile_pic">Skip</a></span>
	                <%= form_for @picture, :url => '/upload_company_logo', :remote=>true ,:html => {:multipart => true,  :id => "company-logo"}, :method=>"post" do |form| %>
	                  <%= form.file_field :company_logo, :style =>"display:none" %>
	                <% end %>
	            </div>
	        <%end%>
	    </div>
	</div>
</div>