<div style="position:relative;height:510px;width:600px;padding: 0px 30px;">
	<h2 class="head_user">Choose your password</h2>
	<div id="step1" class="steps" style="display:block">
		<span class="credit_fild_col"><%= label_tag "Name" %>
			<%= text_field_tag :name, @user.name, disabled: "disabled", placeholder:"Name" %></p></span>
		<span class="credit_fild_col"><%= label_tag "Last Name" %><%= text_field_tag :lname, @user.lname, disabled: "disabled", placeholder:"Last Name" %></p></span>
		<span class="credit_fild_col"><%= label_tag "Email" %><%= text_field_tag :email, @user.email, disabled: "disabled", placeholder:"Enter Your Password" %></p></span>
		<span class="credit_fild_col">
			<%= label_tag "Password" %>
			<%= text_field_tag :password, "", placeholder:"Enter Your Password" %>
			<span class="pwd_error"></span>
		</p></span>

		<p><input type="button" class="next_btnlarge signup_next" data-id="2" value="Next" style="width:200px;"/></p>
	</div>
	<div id="step2" class="steps" style="display:none">
		<%= form_tag('/save_address', method: :post, :id=>"add_form", :class => "forms", :remote=>true) do |f| %>
			<%=hidden_field_tag :user, @user.id%>
			<%=render "common_templates/addressFields"%>
			<p class="add_btn">
				<input type="button" class="next_btnlarge signup_next" data-id="3" value="Next" style="width:200px;"/>
			</p>
		<%end%>
	</div>
	<div id="step3" class="steps" style="display:none;padding:0 5px;display:none">
		<%= form_tag('/make_payment', method: :post, :id=>"payment_form", :class => "forms", :remote=>true) do |f| %>
			<%=hidden_field_tag :user, @user.id%>
			<%=render "common_templates/select_users"%>
			<%= render :template => "common_templates/_labelsForDiscounts" %>	
			<%= render :template => "devise/registrations/_creditCardDetails"%>	
			<p class="pay_btn">
				<input type="button" class="next_btnlarge signup_next1" data-id="4" value="Next" style="width:200px;"/>
			</p>
		<%end%>
	</div>
</div>