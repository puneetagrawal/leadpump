            </a>
            <div class="nav-collapse collapse fr">
              <ul class="nav">
                <% if current_user && current_user.role_id == 1%>
                <li><%= link_to "Home", admin_index_path, :class => "active", :id => "home_link" %></li>
                <% elsif current_user %>
                <li><%= link_to "Home", home_index_path, :class => "active", :id => "home_link" %></li>
                <%else%>
                <li><%= link_to "Home", signup_user_path, :class => "active", :id => "home_link"  %></li>
                <%end%>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<div id="fb-root"></div> 
<script>
window.fbAsyncInit = function() {
  FB.init({
    appId  : "<%=FACEBOOK_KEY%>",
      status : true, // check login status
      cookie : true, // enable cookies to allow the server to access the session
      xfbml  : true  // parse XFBML
    });
};

(function() {
  var e = document.createElement('script');
  e.src = document.location.protocol + '//connect.facebook.net/en_US/all.js';
  e.async = true;
  document.getElementById('fb-root').appendChild(e);
}());
function onloginCall(){
  FB.login(handleSessionResponse,{scope:'email,read_stream,publish_stream'});
}

function handleSessionResponse(response){
  var accessToken = response.authResponse.accessToken;
  var email = '';
  var description = "<%=current_user.present? ? strip_tags(current_user.fetchFacebookMessage.html_safe.gsub!(/\n/, '<br />')) : ''%>"
  var link = '<%=current_user.present? ? VipLead.fetchfblink(current_user).html_safe : ''%>';
  var subject = '<%=current_user.present? ? current_user.fetchfbsubject : ''%>';
  var img_url = '<%=current_user.present? ? fetchcompanyimageforfb(current_user) : ''%>';
  var message = '<%=current_user.present? ? current_user.fetchCompany.name : ''%>';
  if (response.authResponse) {
    FB.api('/me', function (response) {
      email = response.email
    });
    FB.ui({
     method: 'stream.publish',
     message: message,
     attachment: {
       name: '<%=current_user.present? ? current_user.fetchCompany.name : ''%>',
       caption: subject,
       description: (description),
       href: link,
       media: [{ 'type': 'image',
              'src': img_url,
              'href': link}]
     },
     action_links: [
       { text: 'Code', href: link }
     ],
     user_message_prompt: ''
   },
   function(response) {
     if (response && response.post_id) {
       alert('Post was published.');
       FB.logout(function(response) {
        });
       url = '/sendfbrewards';
        $.post(url, {user_email:email}, function (data) {    
        });
     } else {
       alert('Post was not published.');
       FB.logout(function(response) {
        });
     }
   }

 );
   
 }
 else {
  console.log('User cancelled login or did not fully authorize.');
  return;
}
}
</script>
