<div class="container wrapper">
    <div class="row-fluid">
        <div class="span4">
            <div class="border">
                <h2 class="heading">Add A New Mall Item</h2>
                <%= form_for @onlinemall, :url=>"/onlinemall",:method=>:post, :html => {:class => "form pd15"} do |mall| %>
                <%=render "common_templates/showerrors", :object=>@onlinemall%>
                <p><%= mall.label "Title:" %><%= mall.text_field :title %></p>
                <p><%= mall.label "Link:" %><%= mall.text_field :link %></p>
                    <!-- <p><label>File:</label><input type="file"/> </p>
                    <p>*Don't enter the link if you are uploading a file instead.</p> -->
                    <%= mall.fields_for :mallpic, Mallpic.new do |pic| %>
						<label>Image:</label><%= pic.file_field :avatar %>	
					<% end %>
                    <p><input class="btn yellow mallsubmit" type="button" value="Add Mall Item"/></p>
                    <div class="clear"></div>
                <%end%>
            </div>
        </div>
        <div class="span8">
            <div class="border">
                <h2 class="heading">All Mall Items</h2>
                <table class="table table-striped">
                    <thead>
                    <tr><td>No.</td><td>Title</td><td>Picture</td><td>Action</td></tr>
                    </thead>
                    <tbody>
                        <%if @onlinemalls.present?%>
                            <%@onlinemalls.each_with_index do|om, index|%>
                                <tr>
                                    <td><%=index+1%></td>
                                    <td style="width: 70%;"><%=om.title%></td>
                                    <td>
                                        <%if om.mallpic.present?%>
                                            <%= image_tag om.mallpic.last.avatar.url(:thumb), :class=>"img-polaroid", :style=>"width:100%;height:suto;" %>
                                        <%else%>
                                            <img src="/assets/company-logo.png" class="img-polaroid">
                                        <%end%>
                                    </td>
                                    <td>
                                        <%if om.user.role.id == 2%>
                                            <%=check_box_tag "onlinemall_#{om.id}", 'yes', true, :class => 'mall_chek'%>
                                        <%elsif om.user.role.id == 3%>
                                            <%=check_box_tag "onlinemall_#{om.id}", 'yes', false, :class => 'mall_chek'%>
                                        <%end%>
                                        <a class="edit_icon pull-left" href="#"></a>
                                        <a class="delete_icon pull-left" href="#"></a>
                                    </td>
                                </tr>
                            <%end%>
                        <%end%>
                    </tbody>
                </table>
            </div>
            <div class="span8">
                <div class="border">
                    <h2 class="heading">All Mall Items</h2>
                    <table class="table table-striped">
                        <thead>
                            <tr><td>No.</td><td>Title</td><td>Picture</td><td>Action</td></tr>
                        </thead>
                        <tbody>
                            <%@onlinemalls.present?%>
                                <%@onlinemalls.each_with_index do|index, om|%>
                                    <tr>
                                        <td><%=index+1%></td>
                                        <td style="width: 70%;"><%=om.title%></td>
                                        <td>
                                            <%if @picture_user.present?%>
                                                <%= image_tag @picture_user.avatar.url(:medium), :class=>"img-polaroid", :style=>"width:100%;height:suto;" %>
                                            <%else%>
                                                <img src="/assets/company-logo.png" class="img-polaroid">
                                            <%end%>
                                        </td>
                                        <td>
                                            <a class="edit_icon pull-left" href="#"></a>
                                            <a class="delete_icon pull-left" href="#"></a>
                                        </td>
                                    </tr>
                                <%end%>
                            <%end%>
                        </tbody>
                    </table>
                </div>
                <div class="clear"></div>
                <div class="sliderCon">
                    <h2>Online Mall</h2>
